//-----------------------------------------
// Colors
//-----------------------------------------
red           = #9F0F17
red-active    = #FF4C4C

green         = #00A74A
green-active  = #13FF7C

blue          = #094A8F
blue-active   = #1C8CFF

yellow        = #CCA707
yellow-active = #FED93F

bg-color =  #313131

gold   = #C9B037
silver = #B4B4B4
bronze = #AD8A56

//-----------------------------------------
// Background Color
//-----------------------------------------
menu-bg-color   = #181818
dialog-bg-color = #121212
record-bg-color = #242424

//-----------------------------------------
// Text Color
//-----------------------------------------
menu-text-color   = #B7B7B7
dialog-text-color = #EDEDED

//-----------------------------------------
// Game Border
//-----------------------------------------
border-size = 2.5vmin
border-color = #101010

//-----------------------------------------
// Game Size & Viewports Breakpoints
//-----------------------------------------
game-size = 95vmin

sm = 576px

menu-size = 25%
menu-size-sm = 40%

font-size-menu = 4vmin
font-size-score = 6vmin
font-size-play = 8vmin

menu-calc(new-size, v)
  ((new-size / menu-size) * v)vmin

menu(size)
  offset = "calc((%s - %s) / 2)" % (game-size size)
  top offset
  left offset
  width size
  height size

//-----------------------------------------
// Font
//-----------------------------------------
@font-face
  font-family Font
  font-style normal
  src url('../assets/Roboto_Mono/RobotoMono-VariableFont_wght.ttf')

//-----------------------------------------
// Utils
//-----------------------------------------
no-select()
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none

  -ms-user-select none
    user-select none

//-----------------------------------------
// Background & Color buttons
//-----------------------------------------
.red
  background-color red
  border-style solid
  border-width border-size (border-size / 2) (border-size / 2) border-size
  border-color border-color
  border-top-left-radius 100%

.red-active
  background-color red-active

.green
  background-color green
  border-style solid
  border-width border-size border-size (border-size / 2) (border-size / 2)
  border-color border-color
  border-top-right-radius 100%

.green-active
  background-color green-active

.blue
  background-color blue
  border-style solid
  border-width (border-size / 2) (border-size / 2) border-size border-size
  border-color border-color
  border-bottom-left-radius 100%

.blue-active
  background-color blue-active

.yellow
  background-color yellow
  border-style solid
  border-width (border-size / 2) border-size border-size (border-size / 2)
  border-color border-color
  border-bottom-right-radius 100%

.yellow-active
  background-color yellow-active

.bg
  min-height 100vh
  background-color bg-color

.game
  width game-size
  height game-size
  position relative

.game > .row
  width 100%
  height 50%

.btn
  width 50%

//-----------------------------------------
// Color markups
//-----------------------------------------

.text-r
  color red-active

.text-g
  color green-active

.text-b
  color blue-active

.text-y
  color yellow-active

//-----------------------------------------
// Menu
//-----------------------------------------

.menu
  position absolute
  menu(menu-size)
  border-radius 100%
  background-color menu-bg-color
  border border-size solid border-color
  font-family Font
  display flex
  align-items center
  justify-content center
  font-size font-size-menu
  color menu-text-color
  line-height 1
  no-select()

  @media (max-width: sm)
    menu(menu-size-sm)
    font-size menu-calc(menu-size-sm, font-size-menu)

.score
  font-size font-size-score

  @media (max-width: sm)
    font-size menu-calc(menu-size-sm, font-size-score)

.play, .settings, .retry-btn, .record, .home-btn, .question-btn
  cursor pointer

.play
  font-size font-size-play
  
  @media (max-width: sm)
    font-size menu-calc(menu-size-sm, font-size-play)

.settings, .retry-btn, .question-btn
  margin-right 0.638vmin

  @media (max-width: sm)
    margin-right menu-calc(menu-size-sm, 0.638vmin)

.record
  background-color record-bg-color
  border-radius 2.55vmin
  padding 0.319vmin 0.558vmin 0.319vmin 0.319vmin

  @media (max-width: sm)
    border-radius menu-calc(menu-size-sm, 2.55vmin)
    p = menu-calc(menu-size-sm, 0.319vmin)
    pr = menu-calc(menu-size-sm, 0.558vmin)
    padding p pr p p

  .record-text
    font-size 3.7vmin

    @media (max-width: sm)
      font-size menu-calc(menu-size-sm, 3.7vmin)

//-----------------------------------------
// Dialogs
//-----------------------------------------

.card-dialog
  width 35%
  min-width 305px
  font-family Font
  color dialog-text-color
  background-color dialog-bg-color

.q-badge
  padding 4px
  width 20px
  height 20px

.help
  font-size 14px
  margin 0 auto

// 1st Gold
.highscore-0
  color gold
  transform scale(1.5)

// 2nd Silver
.highscore-1
  color silver
  transform scale(1.2)

// 3rd Bronze
.highscore-2
  color bronze

// > 3rd
.highscore
  font-weight bold
  text-align center
  width 24px

.highscore-value
  font-size 28px
  margin-right 16px
  min-width (28*1.2)px

.highscore-info
  font-size 12px
  color rgba(255,255,255,.5)
